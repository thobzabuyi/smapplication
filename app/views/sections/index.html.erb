<div class="row">
  <div class="col-md-10 col-md-offset-1">
    
    <h1 class="text-center">Sections</h1>

<table class="table table-striped table-dark">
  <thead class="thead-light">
    <tr>
      <th>Sec code</th>
      <th>Name</th>
      <th>Desc</th>
      
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.sec_code %></td>
        <td><%= section.name %></td>
        <td><%= section.desc %></td>
         
    <td><%= link_to 'Groups', store_section_groups_path(section.store,section) %></td>
    <td><%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_store_section_path(section.store, section), title: "Edit" %></td>
    <td><%= link_to '<i class="fa fa-trash"></i>'.html_safe, [section.store, section], :method => :delete, data: { confirm: 'Are you sure?' }, title: "Delete" %></td>
    <td><%= link_to '<i class="fa fa-arrow-left"></i>'.html_safe, store_path(section.store_id), title: "Back" %></td>
      </tr>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="row">
<% if can? :create, Manager %>
<%= link_to '<i class="fa fa-plus" style="font-size: 2em;"></i> New Section'.html_safe, new_store_section_path %> | 
<%= link_to '<i class="fa fa-arrow-left" style="font-size: 2em;"></i>'.html_safe, stores_path, title: "Back" %>
<% else %>
<%= link_to '<i class="fa fa-plus" style="font-size: 2em;"></i> New Section'.html_safe, new_store_section_path %> | 
<%= link_to '<i class="fa fa-arrow-left" style="font-size: 2em;"></i>'.html_safe, store_path(current_user.store_id), title: "Back" %>
<% end %>
</div>
</div>
</div>
