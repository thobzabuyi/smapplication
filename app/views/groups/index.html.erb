<div class="row">
  <div class="col-md-10 col-md-offset-1">
    
    <h1 class="text-center">Groups</h1>

<table class="table table-striped table-dark">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.desc %></td>
        <td><%= link_to 'Items', store_section_group_items_path(group.section.store,group.section, group) %></td>
        <td><%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_store_section_group_path(group.section.store, group.section, group), title: "Edit" %></td>
        <td><%= link_to '<i class="fa fa-trash"></i>'.html_safe, [group.section.store, group.section, group], method: :delete, data: { confirm: 'Are you sure?' }, title: "Delete" %></td>
        <td><%= link_to '<i class="fa fa-arrow-left"></i>'.html_safe, store_sections_path(group.section.store), title: "Back" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row">
<%= link_to '<i class="fa fa-plus" style="font-size: 2em;"></i> New Group'.html_safe, new_store_section_group_path %> | <%= link_to '<i class="fa fa-arrow-left" style="font-size: 2em;"></i>'.html_safe, store_sections_path, title: "Back" %>
</div>
</div>
</div>
