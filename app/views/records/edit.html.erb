<h1 class="text-center">Editing Record</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%= form_for([@record.store, @record]) do |form| %>
  <div class="form-group">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, id: :record_quantity, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: "btn btn-secondary col-md-12" %>
  </div>
<% end %>
</div>
</div>

<br>

<div class="row">
<%= link_to '<i class="fa fa-arrow-left" style="font-size: 2em;"></i>'.html_safe, store_records_path, class: "center-block", title: "Back" %>
</div>
